<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." name="Peer">
	<property environment="env"/>
	<property name="source.dir" location="src"/>
   	<property name="build.dir" location="bin"/>
	<property name="conf.dir" location="conf"/>
	<property name="log.dir" location="log"/>
	
    <path id="classpath">
        <pathelement location="${build.dir}"/>
    	<pathelement location="${conf.dir}"/>
    </path>	
	
	<target name="build" description="Builds the project">
		<delete dir="${build.dir}"/>
		<mkdir dir="${build.dir}"/>
		<javac srcdir="${source.dir}" destdir="${build.dir}" classpathref="classpath" fork="true" includeAntRuntime="no"/>
    </target>
	
	<target name="Test" depends="build" description="Tests cluster">
		<java classname="Test" classpathref="classpath" fork="true">
			<jvmarg value="-Dlog4j.configuration=log4j.properties"/>
        </java>
    </target>
</project>